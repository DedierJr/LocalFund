<!-- /LocalFund/views/usuario/add.ejs -->
<%- include('../cabecalho.ejs') %>
<main class="main">
    <div class="form">
        <form method="post" enctype="multipart/form-data" class="form__element">
            <p class="form__p">Nome</p>
            <input type="text" name="nome" placeholder="Digite seu nome." class="form__input">
            <p class="form__p">Email</p>
            <input type="email" name="email" placeholder="Digite seu email." class="form__input">
            <p class="form__p">Senha</p>
            <input type="password" name="senha" placeholder="Digite sua senha." class="form__input">
            <p class="form__p">Foto</p>
            <input type="file" name="foto" class="form__file"><br>
            <input type="submit" value="Adicionar" class="form__submit">
        </form>
    </div>
</main>

